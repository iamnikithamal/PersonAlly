<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PersonAlly" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.PersonAlly.Splash" parent="Theme.PersonAlly">
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="Theme.PersonAlly.Debug" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/debug_background</item>
        <item name="android:statusBarColor">@color/debug_status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
